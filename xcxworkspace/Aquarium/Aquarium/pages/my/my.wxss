/* pages/my/my.wxss */
.bg{
    height: 150px;
    background-color: #d53e37;
}
.head{
    display: flex;
    flex-direction: column;
}
.headIcon{
    display: flex;
    justify-content: center;
}
.login{
    display: flex;
    color: #fff;
    font-size: 15px;
    justify-content:center;
}
.head image{
    border-radius: 50%;
}
.hr{
    width: 100%;
    height: 15px;
    background-color: #f4f5f6;
}
.item{
    display: flex;
    flex-direction: row;
}
.title{
    padding-top: 15px;
    padding-bottom: 15px;
    padding-left: 15px;
    font-size: 15px;
}
.detail2{
    font-size: 15px;
    position: absolute;
    right: 10px;
    height: 50px;
    line-height: 50px;
    color: #888;
}
.line{
    border: 1px solid #ccc;
    opacity: 0.2;
}
.a{
position: absolute;
background-color: white;
padding-top: 15px;
color: rgb(58, 50, 50);
padding-bottom: 15px;
padding-left: 15px;
font-size: 15px;
text-align: left;
}
button::after{
    border: none;
}